{
	"info": {
		"_postman_id": "b766c155-4bbf-4f55-90c7-c8677ac3c494",
		"name": "Question",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "27063831"
	},
	"item": [
		{
			"name": "Send not anonymous question",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Перевірка формату\", function () {\r",
							"    pm.response.to.be.ok\r",
							"    pm.response.to.be.json\r",
							"    const response = pm.response.json()\r",
							"    pm.expect(response.id).to.match(/^[a-z0-9]{13}$/)\r",
							"})"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"warning": "This is a duplicate header and will be overridden by the Content-Type header generated by Postman.",
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\"message\": \"Test message\", \"isAnonymous\": false, \"name\": \"Test name\", \"mail\": \"testmail@mail.com\"}"
				},
				"url": {
					"raw": "http://localhost/api/question/create",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"path": [
						"api",
						"question",
						"create"
					]
				}
			},
			"response": []
		},
		{
			"name": "Get list of questions",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Перевірка формату та кількості\", function () {\r",
							"    const count = parseInt(pm.request.url.query.toObject().count)\r",
							"    pm.response.to.be.ok\r",
							"    pm.response.to.be.json\r",
							"    const response = pm.response.json()\r",
							"    pm.expect(response).to.be.an('array')\r",
							"    pm.expect(response.length).to.be.below(count + 1)\r",
							"    const keys = ['message', 'isAnonymous', 'name', 'mail', 'creationTime', 'id']\r",
							"    response.forEach(item => keys.map(key => pm.expect(item).to.have.property(key)))\r",
							"})"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "http://localhost/api/question/get/list?page=1&count=1",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"path": [
						"api",
						"question",
						"get",
						"list"
					],
					"query": [
						{
							"key": "page",
							"value": "1"
						},
						{
							"key": "count",
							"value": "1"
						}
					]
				}
			},
			"response": []
		}
	]
}